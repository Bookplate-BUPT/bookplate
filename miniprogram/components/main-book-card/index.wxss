/* components/main-book-card/index.wxss */

.card {
  box-shadow: 0px 5px 10px 5px rgba(0, 0, 0, 0.05);
  background: #FFFFFF;
}

.book-name {
  font-weight: bolder;
  font-size: 12px;
  overflow: hidden;
  display: -webkit-box;
  word-break: break-all;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.book-introduction {
  color: var(--gray-text);
  margin-top: 6px;
  overflow: hidden;
  display: -webkit-box;
  word-break: break-all;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}